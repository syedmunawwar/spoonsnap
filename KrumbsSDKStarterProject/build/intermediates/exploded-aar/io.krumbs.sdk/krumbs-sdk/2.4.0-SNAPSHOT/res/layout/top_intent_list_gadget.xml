<?xml version="1.0" encoding="utf-8"?>
<card_view:android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/top_intents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation"
        android:layout_margin="@dimen/card_margin"
        card_view:cardCornerRadius="@dimen/card_corner_radius">
    <LinearLayout
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:id="@+id/top_intents_title_id"
                  android:textSize="@dimen/title_text_size"
                  android:layout_margin="@dimen/title_bottom_margin"
                  android:text="@string/top_intents_title"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:id="@+id/top_intents_list_element_container"
                      android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</card_view:android.support.v7.widget.CardView>
